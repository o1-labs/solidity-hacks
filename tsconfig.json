{
  "compilerOptions": {
    "target": "es2022",
    "module": "commonjs",
    "lib": ["es2022"],
    "outDir": "./dist",
    "rootDir": "./",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "typeRoots": ["./node_modules/@types", "./typechain-types"]
  },
  "include": ["./hardhat.config.ts", "./scripts/**/*", "./test/**/*", "./typechain-types/**/*"],
  "exclude": ["node_modules", "dist", "cache", "artifacts"]
}
